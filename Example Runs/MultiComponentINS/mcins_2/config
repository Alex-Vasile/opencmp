[MESH]
filename = mesh_files/unit_square_coarse.vol

[DIM]
diffuse_interface_method = False

[FINITE ELEMENT SPACE]
elements = u -> VectorH1
           p -> H1
           a -> H1
           b -> H1
           c -> H1
interpolant_order = 3

[DG]
DG = False

[SOLVER]
solver = default
preconditioner = default
linearization_method = Oseen
nonlinear_tolerance = relative -> 1e-4
                      absolute -> 1e-8
nonlinear_max_iterations = 10

[TRANSIENT]
transient = True
scheme = implicit euler
time_range = 0.0, 10
dt = 1e-3

[VISUALIZATION]
save_to_file = False

[ERROR ANALYSIS]
check_error = True

[OTHER]
num_threads = 6
model = MultiComponentINS
component_names = a, b, c
component_in_error_calc = a -> True
                          b -> True
                          c -> True
component_in_time_deriv = a -> True
                          b -> True
                          c -> True
run_dir = Example Runs/MultiComponentINS/mcins_2
